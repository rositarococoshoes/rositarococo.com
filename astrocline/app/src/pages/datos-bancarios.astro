<style>
.bank-container {
	max-width: 800px;
	margin: 0 auto;
	padding: 20px;
}

.bank-header {
	text-align: center;
	margin-bottom: 40px;
	padding: 30px;
	background: linear-gradient(135deg, #f3f4f6 0%, #e5e7eb 100%);
	border-radius: 16px;
}

.bank-header h1 {
	color: #1f2937;
	font-size: 2rem;
	font-weight: 700;
	margin-bottom: 10px;
}

.bank-header p {
	color: #6b7280;
	font-size: 1.1rem;
}

.bank-info {
	background: white;
	border: 2px solid #e5e7eb;
	border-radius: 16px;
	padding: 30px;
	margin-bottom: 40px;
	box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
}

.bank-info h2 {
	color: #1f2937;
	font-size: 1.5rem;
	font-weight: 600;
	margin-bottom: 20px;
	text-align: center;
}

.bank-details {
	display: flex;
	flex-direction: column;
	gap: 15px;
}

.detail-row {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 15px;
	background: #f9fafb;
	border-radius: 8px;
	border-left: 4px solid #dc2626;
}

.label {
	color: #6b7280;
	font-weight: 600;
	flex: 1;
}

.value {
	color: #1f2937;
	font-weight: 700;
	text-align: right;
	flex: 2;
	word-break: break-all;
}

.instructions {
	background: #eff6ff;
	border: 2px solid #dbeafe;
	border-radius: 16px;
	padding: 30px;
	margin-bottom: 40px;
}

.instructions h2 {
	color: #1e40af;
	font-size: 1.4rem;
	font-weight: 600;
	margin-bottom: 20px;
}

.steps {
	list-style: none;
	padding: 0;
	counter-reset: step-counter;
}

.steps li {
	counter-increment: step-counter;
	position: relative;
	padding-left: 50px;
	margin-bottom: 15px;
	color: #374151;
	font-size: 1.05rem;
	line-height: 1.6;
}

.steps li::before {
	content: counter(step-counter);
	position: absolute;
	left: 0;
	top: 0;
	background: #3b82f6;
	color: white;
	width: 30px;
	height: 30px;
	border-radius: 50%;
	display: flex;
	align-items: center;
	justify-content: center;
	font-weight: 600;
}

.important-notice {
	background: #fef2f2;
	border: 2px solid #fecaca;
	border-radius: 16px;
	padding: 30px;
	margin-bottom: 40px;
}

.important-notice h2 {
	color: #dc2626;
	font-size: 1.4rem;
	font-weight: 600;
	margin-bottom: 20px;
}

.notice-list {
	list-style: none;
	padding: 0;
}

.notice-list li {
	color: #991b1b;
	margin-bottom: 10px;
	padding-left: 25px;
	position: relative;
}

.notice-list li::before {
	content: "‚ö†Ô∏è";
	position: absolute;
	left: 0;
}

.whatsapp-section {
	text-align: center;
	margin-bottom: 40px;
}

.whatsapp-button-large {
	display: inline-block;
	background: #25d366;
	color: white;
	text-decoration: none;
	padding: 20px 40px;
	border-radius: 12px;
	font-size: 1.3rem;
	font-weight: 700;
	transition: all 0.3s ease;
	box-shadow: 0 4px 15px rgba(37, 211, 102, 0.3);
}

.whatsapp-button-large:hover {
	background: #128c7e;
	transform: translateY(-3px);
	box-shadow: 0 6px 25px rgba(37, 211, 102, 0.4);
}

.whatsapp-note {
	color: #6b7280;
	margin-top: 15px;
	font-size: 0.95rem;
}

.price-reference {
	background: white;
	border: 2px solid #e5e7eb;
	border-radius: 16px;
	padding: 30px;
	margin-bottom: 40px;
}

.price-reference h2 {
	color: #1f2937;
	font-size: 1.4rem;
	font-weight: 600;
	margin-bottom: 25px;
	text-align: center;
}

.price-grid {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
	gap: 20px;
}

.price-card {
	background: #f9fafb;
	border: 2px solid #e5e7eb;
	border-radius: 12px;
	padding: 25px;
	text-align: center;
	transition: all 0.3s ease;
}

.price-card:hover {
	transform: translateY(-3px);
	box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
}

.price-card.special {
	background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
	border-color: #f59e0b;
}

.price-card h3 {
	color: #1f2937;
	font-size: 1.2rem;
	font-weight: 600;
	margin-bottom: 10px;
}

.price {
	color: #dc2626;
	font-size: 1.8rem;
	font-weight: 700;
	margin-bottom: 10px;
}

.special-note {
	color: #92400e;
	font-size: 0.9rem;
	font-weight: 600;
}

.support {
	background: #f3f4f6;
	border-radius: 16px;
	padding: 30px;
	text-align: center;
}

.support h2 {
	color: #1f2937;
	font-size: 1.4rem;
	font-weight: 600;
	margin-bottom: 15px;
}

.support p {
	color: #6b7280;
	margin-bottom: 25px;
	font-size: 1.05rem;
}

.support-buttons {
	display: flex;
	gap: 20px;
	justify-content: center;
	flex-wrap: wrap;
}

.support-button {
	display: inline-block;
	padding: 15px 30px;
	border-radius: 8px;
	text-decoration: none;
	font-weight: 600;
	transition: all 0.3s ease;
}

.support-button.primary {
	background: #3b82f6;
	color: white;
}

.support-button.primary:hover {
	background: #2563eb;
	transform: translateY(-2px);
}

.support-button.secondary {
	background: #6b7280;
	color: white;
}

.support-button.secondary:hover {
	background: #4b5563;
	transform: translateY(-2px);
}

@media (max-width: 768px) {
	.bank-container {
		padding: 15px;
	}
	
	.bank-header {
		padding: 20px;
	}
	
	.bank-header h1 {
		font-size: 1.5rem;
	}
	
	.detail-row {
		flex-direction: column;
		align-items: flex-start;
		gap: 8px;
	}
	
	.value {
		text-align: left;
	}
	
	.price-grid {
		grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
	}
	
	.support-buttons {
		flex-direction: column;
		align-items: center;
	}
	
	.support-button {
		width: 100%;
		max-width: 300px;
	}
}
</style>

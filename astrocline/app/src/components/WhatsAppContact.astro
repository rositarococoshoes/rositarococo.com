---
// WhatsAppContact.astro - Componente para contacto WhatsApp
export interface Props {
	showMessage?: boolean;
	customMessage?: string;
}

const { showMessage = true, customMessage } = Astro.props;
---

<section class="text-center space-y-4">
	{showMessage && (
		<div class="bg-green-50 border border-green-200 rounded-lg p-4">
			<p class="text-green-800 font-semibold text-lg">
				¡Gracias! Aguardamos tu PAGO y tu AVISO por Whatsapp para despachar!!
			</p>
		</div>
	)}

	<!-- Botón de WhatsApp -->
	<div class="space-y-2">
		<p class="font-semibold">
			{customMessage || "Envíanos el comprobante por WhatsApp:"}
		</p>
		<a 
			href="http://bit.ly/wspb-rosita" 
			target="_blank"
			rel="noopener noreferrer"
			class="inline-flex items-center justify-center w-full md:w-auto px-6 py-3 bg-green-500 hover:bg-green-600 text-white font-bold rounded-lg transition-colors duration-200 shadow-lg hover:shadow-xl transform hover:scale-105"
		>
			<svg 
				class="w-6 h-6 mr-2" 
				fill="currentColor" 
				viewBox="0 0 24 24" 
				aria-hidden="true"
			>
				<path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.465 3.488"/>
			</svg>
			Enviar por WhatsApp
		</a>
	</div>

	<!-- Información adicional -->
	<div class="text-sm text-gray-600">
		<p>
			Whatsapp aquí ⇒ 
			<a 
				href="http://bit.ly/wspb-rosita" 
				target="_blank"
				rel="noopener noreferrer"
				class="text-green-600 hover:text-green-700 underline"
			>
				http://bit.ly/wspb-rosita
			</a>
		</p>
	</div>
</section>

<!-- Script para tracking de clics en WhatsApp -->
<script>
	document.addEventListener('DOMContentLoaded', function() {
		const whatsappLinks = document.querySelectorAll('a[href*="bit.ly/wspb-rosita"]');
		
		whatsappLinks.forEach(link => {
			link.addEventListener('click', function() {
				// Facebook Pixel tracking para WhatsApp
				if (typeof fbq !== 'undefined') {
					fbq('track', 'Contact');
				}
				
				// Google Analytics event (si está disponible)
				if (typeof gtag !== 'undefined') {
					gtag('event', 'whatsapp_click', {
						'event_category': 'Contact',
						'event_label': 'WhatsApp Contact Button'
					});
				}
			});
		});
	});
</script>
